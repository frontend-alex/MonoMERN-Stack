{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "typeRoots": ["./src/express-user.d.ts", "node_modules/@types"],
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["../shared/build/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "../shared" }]
}
