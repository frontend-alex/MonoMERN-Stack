# ==============================
# Application
# ==============================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# ==============================
# Security
# ==============================
TRUST_PROXY=0
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
CORS_ORIGINS=http://localhost:5173
CSRF_COOKIE_SECURE=false
SESSION_SECRET=NWDnGfWjNy7FZp6RccZVpL6XqrI0cgD4

# ==============================
# HTTPS
# ==============================
HTTPS_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# ==============================
# Cluster
# ==============================
CLUSTER_ENABLED=false
CLUSTER_WORKERS=0

# ==============================
# Advanced
# ==============================
REQUEST_BODY_LIMIT=10kb
TRUSTED_PROXIES=

# ==============================
# Database
# ==============================
DB_LOCAL_URI=mongodb://localhost:27017/your-database-name
DB_ATLAS_URI=

# ==============================
# Email (OTP)
# ==============================
OTP_EMAIL=
OTP_EMAIL_PASSWORD=
OTP_EMAIL_SERVICE=gmail
OTP_EXPIRY=300000

# ==============================
# JWT
# ==============================
JWT_SECRET=
JWT_REFRESH_SECRET=
JWT_EXPIRATION="1h"

# ==============================
# Social Auth Providers
# ==============================

# Google
GOOGLE_CLIENT_ID=google-client-id
GOOGLE_CLIENT_SECRET=google-secret-id

# GitHub
GITHUB_CLIENT_ID=github-client-id
GITHUB_CLIENT_SECRET=github-client-secret

# Facebook
FACEBOOK_CLIENT_ID=facebook-client-id
FACEBOOK_CLIENT_SECRET=facebook-client-secret

# Twitter
TWITTER_CONSUMER_KEY=twitter-consumer-key
TWITTER_CONSUMER_SECRET=twitter-consumer-secret

# LinkedIn
LINKEDIN_CLIENT_ID=linkedin-client-id
LINKEDIN_CLIENT_SECRET=linkedin-client-secret

# Instagram
INSTAGRAM_CLIENT_ID=instagram-client-id
INSTAGRAM_CLIENT_SECRET=instagram-client-secret

# Auth0
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=auth0-client-id
AUTH0_CLIENT_SECRET=auth0-client-secret

# Spotify
SPOTIFY_CLIENT_ID=spotify-client-id
SPOTIFY_CLIENT_SECRET=spotify-client-secret

# Optional OAuth2 fallback
OAUTH2_CLIENT_ID=generic-oauth2-client-id
OAUTH2_CLIENT_SECRET=generic-oauth2-client-secret
