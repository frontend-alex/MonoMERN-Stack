# Application
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Security
TRUST_PROXY=0  # Number of proxies to trust (0-1)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in ms
RATE_LIMIT_MAX=100
CORS_ORIGINS=http://localhost:5173
CSRF_COOKIE_SECURE=false
SESSION_SECRET=NWDnGfWjNy7FZp6RccZVpL6XqrI0cgD4 #for example

# HTTPS
HTTPS_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Cluster
CLUSTER_ENABLED=false
CLUSTER_WORKERS=0  # 0 = auto-detect

# Advanced
REQUEST_BODY_LIMIT=10kb
TRUSTED_PROXIES=  # Comma-separated IPs

# Database
DB_LOCAL_URI=mongodb://localhost:27017/your-database-name
DB_ATLAS_URI= # mongodb+srv://<username>:<password>@cluster0.mongodb.net/your-database-name?retryWrites=true&w=majority

#email
OTP_EMAIL= # example@gmail.com
OTP_EMAIL_PASSWORD= # abcd efgh igkl mnop
OTP_EMAIL_SERVICE=gmail

#google
GOOGLE_CLIENT_ID=google-client-id
GOOGLE_CLIENT_SECRET=google-secret-id

#env
JWT_SECRET= #512 bits key
JWT_REFRESH_SECRET= #512-bits key
JWT_EXPIRATION="1h"