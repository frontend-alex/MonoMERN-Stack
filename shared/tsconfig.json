{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es2016",
    "moduleResolution": "node",
    "verbatimModuleSyntax": false,
    "erasableSyntaxOnly": false,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/*"]
    }
  },
  "include": ["src"]
}
